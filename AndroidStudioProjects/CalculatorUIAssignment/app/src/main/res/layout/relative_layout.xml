<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00CCCD">


    <Button
        android:id="@+id/reset"
        android:textSize="20dp"
        android:layout_width="103dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="17dp"
        android:text="Reset"
        android:onClick="resetPressed"/>

    <Button
        android:id="@+id/mult"
        android:textSize="20dp"
        android:layout_width="103dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="254dp"
        android:layout_marginRight="254dp"
        android:layout_marginBottom="124dp"
        android:text="*"
        android:onClick="multPressed"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/div"
        android:layout_width="103dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="125dp"
        android:text="/"
        android:onClick="divPressed"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="301dp"
        android:gravity="center"
        android:text="Result = 0"
        android:textSize="36sp" />

    <Button
        android:textSize="20dp"
        android:id="@+id/sub"
        android:layout_width="103dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="218dp"
        android:text="-"
        android:onClick="subPressed"/>

    <Button
        android:id="@+id/add"
        android:layout_width="103dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="257dp"
        android:layout_marginRight="257dp"
        android:layout_marginBottom="218dp"
        android:onClick="addPressed"
        android:text="+"
        android:textSize="20dp" />

    <Button
        android:textSize="20dp"
        android:id="@+id/mod"
        android:layout_width="103dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="252dp"
        android:layout_marginRight="252dp"
        android:layout_marginBottom="14dp"
        android:text="%"
        android:onClick="modPressed"/>

    <EditText
        android:id="@+id/num2"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="409dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Number 2"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textView"
        android:textSize="36dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="630dp"
        android:text="VIT BHOPAL" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="519dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Number 1"
        android:textSize="30dp"/>

</RelativeLayout>
